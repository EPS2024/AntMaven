                        <author>true</author>
                        <version>true</version>
                        <use>true</use>
                        <windowTitle>UPS Core API</windowTitle>
                        <sourcePath>${src.dir}</sourcePath>
                        <sourceFiles>
                            <files>
                                <fileSet>
                                    <directory>${src.dir}</directory>
                                    <includes>
                                        <include>**/*.java</include>
                                    </includes>
                                    <useDefaultExcludes>false</useDefaultExcludes>
                                </fileSet>
                            </files>
                        </sourceFiles>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>
